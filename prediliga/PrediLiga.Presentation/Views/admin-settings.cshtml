<div ng-init="loadLeagues()">
    <h1>Leagues</h1>
    <table class="table table-hover">
        <tr>
            <td> </td>
            <td>Liga</td>
            <td> </td>
            <td> </td>
            <td> </td>
        </tr>
        <tr ng-repeat="availableLeague in availableLeagues">
            <td>   </td>
            <td>{{availableLeague.Name}}</td>
            <td><button class="btn btn-primary" type="submit">  Calendar</button></td>
            <td><button class="btn btn-primary" type="submit">  Edit</button></td>
            <td>
                <form ng-submit="Delete(availableLeague.Id)">
                    <button class="btn btn-danger" type="submit">  Disable League</button>
                </form>
            </td>
        </tr>
    </table>
    <form ng-submit="AddLiga()">
        <button class="btn btn-success" type="submit" style="float: right;" ng-disabled="ShowEdit1" disabled>Add League</button>
    </form>
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-show="ShowEdit1">
        <h3>Add New League</h3>
        <form ng-submit="AddLeague()">
            <input ng-model="league.Id" type="number" class="form-control" placeholder="League ID" required />
            <input ng-model="league.Name" type="text" class="form-control" placeholder="League Name" required autofocus />
            <button class="btn btn-success" type="submit" ng-disabled="!(league)" disabled> Done</button>
        </form>
        <form ng-submit="AddLiga()">
            <button class="btn btn-danger" type="submit"> Cancel</button>
        </form>
    </div>
</div>
