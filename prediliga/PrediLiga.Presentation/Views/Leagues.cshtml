
<div ng-init="loadLeagues()">
    <div class="row">
        <div role="main" class="container theme-showcase">
            <ul class="nav navbar-nav navbar-right">
                <a href="/my-profile" class="btn btn-primary">Profile</a>
                <a href="/admin-settings" class="btn btn-primary">Admin Settings</a>
                <a href="/" class="btn btn-danger">Log Out</a>
            </ul>
        </div>
        <div class="col-sm-4 col-md-4 user-details">
            <div class="user-image">
                <h3>
                    <img class="pic img-circle" src="http://www.therpf.com/uploads/avatars/avatar44216_4.gif" alt="...">       Wade Wilson
                </h3>
            </div>
        </div>
    </div>
    <div ng-init="loadMatches()">
        <h1>My Table</h1>
        <table class="table table-hover">
            <tr>
                <td> </td>
                <td>Liga </td>
                <td>Equipo Casa</td>
                <td>Marcador Casa </td>
                <td>Marcador Visita</td>
                <td>Equipo Casa </td>
                <td> </td>
            </tr>
            <tr ng-repeat="availableMatch in availableMatches">
                <td>   </td>
                <td>{{availableMatch.Liga}}</td>
                <td>{{availableMatch.EquipoCasa}}</td>
                <td> - </td>
                <td> - </td>
                <td>{{availableMatch.EquipoVisita}}</td>
                <td><a class=" btn btn-success" href="/predict-a-goal"> Predict-A-Goal</a></td>
            </tr>
        </table>
    </div>
    <div>
        <h1>My Leagues</h1>
        <table class="table table-hover">
            <tr>
                <td> </td>
                <td>LIGA</td>
                <td></td>
                <td> </td>
                <td> </td>
                <td> </td>
            </tr>
            <tr ng-repeat="availableLeague in availableLeagues">
                <td>   </td>
                <td>{{availableLeague.Name}}</td>
                <td>Ver Calendario</td>
                <td><a class=" btn btn-danger"> Unfollow</a></td>
            </tr>
        </table>
    </div>
</div>